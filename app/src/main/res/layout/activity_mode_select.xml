<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/mode_select_bg"
    android:orientation="vertical">

    <Button
        android:id="@+id/graffity_mode_button"
        android:layout_width="254dp"
        android:layout_height="100dp"
        android:layout_gravity="center"
        android:layout_marginTop="70dp"
        android:background="@drawable/button_bg_red"
        android:fontFamily="@font/mplus_rounded1c_bold"
        android:text="　らくがき　"
        android:textColor="@color/black"
        android:textSize="36sp" />

    <Button
        android:id="@+id/coloringbattle_mode_button"
        android:layout_width="wrap_content"
        android:layout_height="100dp"
        android:layout_gravity="center"
        android:layout_marginTop="50dp"
        android:background="@drawable/button_bg_disable"
        android:enabled="false"
        android:fontFamily="@font/mplus_rounded1c_bold"
        android:text="　ぬりえバトル　"
        android:textColor="@color/black"
        android:textSize="36sp" />

    <Button
        android:id="@+id/photogallery_button"
        android:layout_width="wrap_content"
        android:layout_height="100dp"
        android:layout_gravity="center"
        android:layout_marginTop="50dp"
        android:background="@drawable/button_bg_blue"
        android:fontFamily="@font/mplus_rounded1c_bold"
        android:text="　写真ギャラリー　"
        android:textColor="@color/black"
        android:textSize="36sp" />


</LinearLayout>