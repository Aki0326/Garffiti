<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <FrameLayout
            android:id="@+id/blue_color_button"
            android:layout_width="@dimen/brush_input_frame"
            android:layout_height="@dimen/brush_input_frame"
            android:layout_marginBottom="8dp"
            android:clickable="true">

            <ImageView
                android:layout_width="@dimen/brush_input_bg"
                android:layout_height="@dimen/brush_input_bg"
                android:layout_gravity="center"
                android:src="@drawable/brush_option_bg" />

            <ImageView
                android:layout_width="@dimen/brush_input_width"
                android:layout_height="@dimen/brush_input_height"
                android:layout_gravity="center"
                android:paddingStart="@dimen/brush_size_indicator_padding_left"
                android:paddingTop="@dimen/brush_size_indicator_padding_top"
                android:paddingEnd="@dimen/brush_size_indicator_padding_right"
                android:src="@drawable/ic_brush_blue" />

        </FrameLayout>

        <FrameLayout
            android:id="@+id/yellow_color_button"
            android:layout_width="@dimen/brush_input_frame"
            android:layout_height="@dimen/brush_input_frame"
            android:layout_marginBottom="8dp"
            android:clickable="true">

            <ImageView
                android:layout_width="@dimen/brush_input_bg"
                android:layout_height="@dimen/brush_input_bg"
                android:layout_gravity="center"
                android:src="@drawable/brush_option_bg" />

            <ImageView
                android:layout_width="@dimen/brush_input_width"
                android:layout_height="@dimen/brush_input_height"
                android:layout_gravity="center"
                android:paddingStart="@dimen/brush_size_indicator_padding_left"
                android:paddingTop="@dimen/brush_size_indicator_padding_top"
                android:paddingEnd="@dimen/brush_size_indicator_padding_right"
                android:src="@drawable/ic_brush_yellow" />

        </FrameLayout>

        <FrameLayout
            android:id="@+id/red_color_button"
            android:layout_width="@dimen/brush_input_frame"
            android:layout_height="@dimen/brush_input_frame"
            android:layout_marginBottom="8dp"
            android:clickable="true">

            <ImageView
                android:layout_width="@dimen/brush_input_bg"
                android:layout_height="@dimen/brush_input_bg"
                android:layout_gravity="center"
                android:src="@drawable/brush_option_bg" />

            <ImageView
                android:layout_width="@dimen/brush_input_width"
                android:layout_height="@dimen/brush_input_height"
                android:layout_gravity="center"
                android:paddingStart="@dimen/brush_size_indicator_padding_left"
                android:paddingTop="@dimen/brush_size_indicator_padding_top"
                android:paddingEnd="@dimen/brush_size_indicator_padding_right"
                android:src="@drawable/ic_brush_red" />

        </FrameLayout>

        <FrameLayout
            android:id="@+id/green_color_button"
            android:layout_width="@dimen/brush_input_frame"
            android:layout_height="@dimen/brush_input_frame"
            android:layout_marginBottom="8dp"
            android:clickable="true">

            <ImageView
                android:layout_width="@dimen/brush_input_bg"
                android:layout_height="@dimen/brush_input_bg"
                android:layout_gravity="center"
                android:src="@drawable/brush_option_bg" />

            <ImageView
                android:layout_width="@dimen/brush_input_width"
                android:layout_height="@dimen/brush_input_height"
                android:layout_gravity="center"
                android:paddingStart="@dimen/brush_size_indicator_padding_left"
                android:paddingTop="@dimen/brush_size_indicator_padding_top"
                android:paddingEnd="@dimen/brush_size_indicator_padding_right"
                android:src="@drawable/ic_brush_green" />

        </FrameLayout>

        <FrameLayout
            android:id="@+id/black_color_button"
            android:layout_width="@dimen/brush_input_frame"
            android:layout_height="@dimen/brush_input_frame"
            android:layout_marginBottom="8dp"
            android:clickable="true">

            <ImageView
                android:layout_width="@dimen/brush_input_bg"
                android:layout_height="@dimen/brush_input_bg"
                android:layout_gravity="center"
                android:src="@drawable/brush_option_bg" />

            <ImageView
                android:layout_width="@dimen/brush_input_width"
                android:layout_height="@dimen/brush_input_height"
                android:layout_gravity="center"
                android:paddingStart="@dimen/brush_size_indicator_padding_left"
                android:paddingTop="@dimen/brush_size_indicator_padding_top"
                android:paddingEnd="@dimen/brush_size_indicator_padding_right"
                android:src="@drawable/ic_brush_black" />

        </FrameLayout>
    </LinearLayout>
</merge>